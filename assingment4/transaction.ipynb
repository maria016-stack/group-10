    "def count_transactions():\n",
    "    amount = float(input(\"Enter a transaction amount(enter 0 to stop): \"))\n",
    "    if amount == 0:\n",
    "        return 0  \n",
    "    else:\n",
    "        return 1 + count_transactions()  \n",
    "total = count_transactions()\n",
    "print(\"The Total number of transactions entered is:\", total)"
